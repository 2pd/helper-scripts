version: "3.7"
services:
  postgres:
    image: postgres:9.6.6
    ports:
      - "5432:5432"
    volumes:
      - 'postgres:/var/lib/postgresql/data'
    environment:
      POSTGRES_USER: root
      POSTGRES_PASSWORD: root

  pg_admin:
    image: dpage/pgadmin4:latest
    ports:
      - "15432:80"
    environment:
      - GUNICORN_THREADS=1
      - PGADMIN_DEFAULT_EMAIL=liang.shi@protonmail.com
      - PGADMIN_DEFAULT_PASSWORD=test
    depends_on:
      - postgres
volumes:
  postgres:
